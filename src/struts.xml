<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
        "http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
    <package name="default" extends="struts-default">
        <interceptors>
            <interceptor name="loginInterceptor" class="interceptor.LoginInterceptor"></interceptor>
            <interceptor name="powerInterceptor" class="interceptor.PowerInterceptor"></interceptor>
            <interceptor name="hasLoginInterceptor" class="interceptor.HasLoginInterceptor"></interceptor>
        </interceptors>
        <action name="login" class="action.LoginAction">
            <result type="redirect">${url}</result>
            <result name="login">/Login.jsp</result>
            <result name="error">/Index.jsp</result>
            <interceptor-ref name="hasLoginInterceptor"></interceptor-ref>
            <interceptor-ref name="defaultStack"></interceptor-ref>
        </action>
        <action name="register" class="action.RegisterAction">
            <result type="redirect">${url}</result>
            <result name="input">/Login.jsp</result>
            <result name="error">/Index.jsp</result>
            <interceptor-ref name="hasLoginInterceptor"></interceptor-ref>
            <interceptor-ref name="defaultStack"></interceptor-ref>
        </action>
        <action name="logout" class="action.LogoutAction">
            <result type="redirect">${url}</result>
            <result name="login">/Login.jsp</result>
            <interceptor-ref name="loginInterceptor"></interceptor-ref>
            <interceptor-ref name="defaultStack"></interceptor-ref>
        </action>
        <action name="showForum" class="action.ShowForumAction">
            <result>/Forum.jsp</result>
        </action>
        <action name="showForumDetail" class="action.ShowForumDetailAction">
            <result>/ForumDetail.jsp</result>
        </action>
        <action name="showPost" class="action.ShowPostAction">
            <result>/Post.jsp</result>
        </action>
        <action name="addReply" class="action.AddReplyAction">
            <result type="redirect">${url}</result>
            <result name="login">/Login.jsp</result>
            <interceptor-ref name="loginInterceptor"></interceptor-ref>
            <interceptor-ref name="defaultStack"></interceptor-ref>
        </action>
        <action name="addPost" class="action.AddPostAction">
            <result type="redirect">${url}</result>
            <result name="login">/Login.jsp</result>
            <interceptor-ref name="loginInterceptor"></interceptor-ref>
            <interceptor-ref name="defaultStack"></interceptor-ref>
        </action>
        <action name="deleteReply" class="action.DeleteReplyAction">
            <result type="redirect">${url}</result>
            <result name="login">/Login.jsp</result>
            <interceptor-ref name="powerInterceptor"></interceptor-ref>
            <interceptor-ref name="defaultStack"></interceptor-ref>
        </action>
        <action name="deletePost" class="action.DeletePostAction">
            <result type="redirect">${url}</result>
            <result name="login">/Login.jsp</result>
            <interceptor-ref name="powerInterceptor"></interceptor-ref>
            <interceptor-ref name="defaultStack"></interceptor-ref>
        </action>
        <action name="friendList" class="action.ShowFriendListAction">
            <result>/Friends.jsp</result>
            <result name="login">/Login.jsp</result>
            <interceptor-ref name="loginInterceptor"></interceptor-ref>
            <interceptor-ref name="defaultStack"></interceptor-ref>
        </action>
        <action name="index">
            <result>/Index.jsp</result>
        </action>

        <action name="showHome" class="action.ShowHomeAction">
            <result>/Home.jsp</result>
            <result name="login" type="redirect">login.action</result>
            <interceptor-ref name="loginInterceptor"></interceptor-ref>
            <interceptor-ref name="defaultStack"></interceptor-ref>
        </action>

        <action name="*">
            <result type="redirect">index.action</result>
        </action>
    </package>
</struts>